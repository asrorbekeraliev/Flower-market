<div class="container mt-5" style="margin-bottom: 80px;">
    <div class="row">
        <div class="col-md-6 offset-3">
            {{#if errorMessage}}
            <div class="mb-3">
                <p style="color: red;">{{errorMessage}}</p>
            </div>
            {{/if}}
            <form action="/product/order/{{productId}}" method="post">
                <div class="mb-3">
                    <label for="fullname" class="form-label" style="color: blue;">Enter your fullname</label>
                    <input class="form-control" type="text" name="fullname" id="fullname" />
                </div>
                <div class="mb-3">
                    <label style="margin-bottom: 10px; color:blue">Select your region<br></label>
                    <div class="row">
                        <div class="col">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region" value="Andijan"
                                    checked>
                                <label class="form-check-label" for="exampleRadios1">
                                    Andijan
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region" value="Namangan">
                                <label class="form-check-label" for="exampleRadios2">
                                    Namangan
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region" value="Fergana">
                                <label class="form-check-label" for="exampleRadios1">
                                    Fergana
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region" value="Tashkent">
                                <label class="form-check-label" for="exampleRadios2">
                                    Tashkent
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region" value="Jizzakh">
                                <label class="form-check-label" for="exampleRadios1">
                                    Jizzakh
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region" value="Bukhara">
                                <label class="form-check-label" for="exampleRadios2">
                                    Bukhara
                                </label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region" value="Samarkand">
                                <label class="form-check-label" for="exampleRadios1">
                                    Samarkand
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region"
                                    value="Surkhandarya">
                                <label class="form-check-label" for="exampleRadios2">
                                    Surkhandarya
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region" value="Navoiy">
                                <label class="form-check-label" for="exampleRadios2">
                                    Navoiy
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region" value="Khorezm">
                                <label class="form-check-label" for="exampleRadios1">
                                    Khorezm
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region" value="Sirdaryo">
                                <label class="form-check-label" for="exampleRadios2">
                                    Sirdaryo
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region"
                                    value="Kashkadarya">
                                <label class="form-check-label" for="exampleRadios2">
                                    Kashkadarya
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="phoneNumber" class="form-label" style="color: blue;">Enter your phone number</label>
                    <input class="form-control" type="text" name="phoneNumber" id="phoneNumber"
                        placeholder="Ex.: +998 90 123 45 67">
                </div>
                <button type="submit" class="btn btn-primary">Make Order</button>
            </form>
        </div>
    </div>
</div>